<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MOBaPadMapper2.MainPage"
             BackgroundColor="#111111">

    <VerticalStackLayout
        Padding="20"
        Spacing="20">

        <Label Text="MobaPad Mapper"
               FontSize="26"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="White" />

        <!-- Wybór profilu -->
        <StackLayout>
            <Label Text="Profil mapowania:"
                   TextColor="White"
                   FontAttributes="Bold" />
            <Picker x:Name="ProfilePicker"
                    SelectedIndexChanged="ProfilePicker_SelectedIndexChanged" />
        </StackLayout>

        <!-- Aktywny profil -->
        <StackLayout>
            <Label Text="Aktywny profil:"
                   TextColor="White" />
            <Label x:Name="ActiveProfileLabel"
                   Text="-"
                   TextColor="Orange"
                   FontAttributes="Bold"
                   FontSize="18" />
        </StackLayout>

        <!-- Przycisk konfiguracji -->
        <Button Text="Konfiguracja przycisków"
                Clicked="ConfigureButton_Clicked" />

        <Label Text="Podłącz gamepad i używaj go w grze z aktualnym profilem."
               TextColor="LightGray"
               FontSize="12" />
    </VerticalStackLayout>
</ContentPage>
