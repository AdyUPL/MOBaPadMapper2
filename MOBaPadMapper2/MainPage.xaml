<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MOBaPadMapper2.MainPage"
             BackgroundColor="#111111">

    <VerticalStackLayout Padding="20" Spacing="20">

        <Label Text="MobaPad Mapper"
               FontSize="26"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="White" />

        <!-- Informacja o aktualnym profilu -->
        <StackLayout>
            <Label Text="Aktywny profil:"
                   TextColor="White" />
            <Label x:Name="ActiveProfileLabel"
                   Text="Domyślny profil"
                   TextColor="Orange"
                   FontAttributes="Bold"
                   FontSize="18" />
        </StackLayout>

        <!-- (na razie bez wyboru profilu, tylko info) -->

        <!-- Przycisk konfiguracji -->
        <Button Text="Konfiguracja przycisków"
                Clicked="ConfigureButton_Clicked" />

        <Label Text="Podłącz gamepad i używaj przycisków wg aktualnego profilu."
               TextColor="LightGray"
               FontSize="12" />

    </VerticalStackLayout>
</ContentPage>
