<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MOBaPadMapper2.TestPage"
             BackgroundColor="#111111">

    <Grid ColumnDefinitions="3*,2*">
        <!-- LEWA STRONA – POWIERZCHNIA TESTOWA -->
        <AbsoluteLayout x:Name="TestSurface"
                        Grid.Column="0"
                        BackgroundColor="#202020"
                        Margin="10">
            <!-- Przyciski są dodawane w kodzie (TestPage.xaml.cs) -->
        </AbsoluteLayout>

        <!-- PRAWA STRONA – PANEL KONFIGURACJI -->
        <Grid x:Name="ConfigPanel"
              Grid.Column="1"
              BackgroundColor="#181818"
              Padding="10"
              IsVisible="False">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Nazwa gry -->
            <Label x:Name="GameNameLabel"
                   Grid.Row="0"
                   Text="Gra: -"
                   TextColor="White"
                   FontAttributes="Bold"
                   FontSize="18"
                   Margin="0,0,0,10" />

            <!-- Aktualnie wybrany przycisk -->
            <HorizontalStackLayout Grid.Row="1" Spacing="8">
                <Label Text="Wybrany przycisk:"
                       TextColor="White" />
                <Label x:Name="SelectedButtonLabel"
                       Text="-"
                       TextColor="Orange"
                       FontAttributes="Bold" />
            </HorizontalStackLayout>

            <!-- Typ akcji -->
            <StackLayout Grid.Row="2" Margin="0,10,0,0">
                <Label Text="Typ akcji"
                       TextColor="White" />
                <Picker x:Name="ActionTypePicker"
                        Title="Wybierz akcję" />
            </StackLayout>

            <!-- Rozmiar przycisku -->
            <StackLayout Grid.Row="3" Margin="0,10,0,0">
                <Label Text="Rozmiar przycisku"
                       TextColor="White" />
                <Slider x:Name="SizeSlider"
                        Minimum="30"
                        Maximum="160"
                        Value="60" />
            </StackLayout>

            <!-- Info -->
            <StackLayout Grid.Row="4"
                         Margin="0,10,0,0"
                         Spacing="6">
                <Label Text="Przeciągnij przyciski po lewej, aby zmienić ich pozycję."
                       TextColor="LightGray"
                       FontSize="12" />
                <Label Text="Kliknij w puste miejsce na powierzchni, aby odznaczyć."
                       TextColor="LightGray"
                       FontSize="12" />
            </StackLayout>

            <!-- Dodanie nowego przycisku -->
            <Button Grid.Row="5"
                    Text="Dodaj mapowanie"
                    Margin="0,10,0,0"
                    Clicked="OnAddMappingClicked" />
        </Grid>
    </Grid>
</ContentPage>
